rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow collaborative star ratings for any trip (with validation)
    match /trips/{tripId}/food_ratings/{itemId} {
      allow read: if true;
      allow write: if request.resource.data.keys().hasOnly(['rating', 'updatedAt'])
                   && request.resource.data.rating is number
                   && request.resource.data.rating >= 0
                   && request.resource.data.rating <= 5;
    }

    // Allow public read/write for journal entries (personal site)
    match /journal_entries/{entryId} {
      allow read: if true;  // 公開瀏覽
      allow write: if request.auth != null;  // 需登入才能寫
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
