rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow collaborative star ratings for any trip (with validation)
    match /trips/{tripId}/food_ratings/{itemId} {
      allow read: if true;
      allow write: if true; // Allow shared favorites (create/delete) for all users
    }

    // Allow shopping list purchased status sync
    match /trips/{tripId}/shopping_purchased/{itemId} {
      allow read: if true;
      allow write: if true; // Allow shared checkbox state for all users
    }

    // Allow to-do list completion status sync
    match /trips/{tripId}/todo_completed/{itemId} {
      allow read: if true;
      allow write: if true; // Allow shared checkbox state for all users
    }

    // Allow public read/write for journal entries (personal site)
    match /journal_entries/{entryId} {
      allow read: if true;  // 公開瀏覽
      allow write: if request.auth != null;  // 需登入才能寫
    }

    // Allow public read for CB history data
    match /cb_history/{symbol} {
      allow read: if true;
      allow write: if true;
      
      // Allow access to sub-records
      match /records/{date} {
        allow read: if true;
        allow write: if true;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
