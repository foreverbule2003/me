rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow collaborative star ratings for any trip
    match /trips/{tripId}/food_ratings/{itemId} {
      allow read, write: if true;
    }

    // Allow public read/write for journal entries (personal site)
    match /journal_entries/{entryId} {
      allow read, write: if true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
