      @keyframes pulse-soft {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }
      .animate-pulse-soft {
        animation: pulse-soft 2s infinite ease-in-out;
      }

      /* Tab Styles */
      .tab-btn {
        padding: 12px 24px;
