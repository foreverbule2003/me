        if (!convPrice || convPrice <= 0) {
          convPrice = parseFloat(item.conversionPrice) || 100;
          convPriceInput.value = convPrice; // Auto-fill if empty
        }

        // Use Module for Calculation
        const shares = CbCalculatorCore.calculateSharesPerBond(convPrice);
        const convVal = CbCalculatorCore.calculateConversionValue(
          stockPrice,
          convPrice,
        );
        const premium = CbCalculatorCore.calculatePremiumRate(
          cbPrice,
          stockPrice,
          convPrice,
        );
        const parityPrice = CbCalculatorCore.calculateParityPrice(
          cbPrice,
          convPrice,
        );
        const upside = CbCalculatorCore.calculateUpsideNeeded(
          stockPrice,
          parityPrice,
        );

        // Helper to safely set text content or value
        const safeSetText = (id, text) => {
          const el = document.getElementById(id);
          if (el) {
             if (el.tagName === 'INPUT') {
                 // Don't overwrite if focused
                 if (document.activeElement !== el) el.value = text;
             } else {
                 el.textContent = text;
             }
          }
        };

        // Update UI
        safeSetText(
          "dPremiumRate",
          (Number.isFinite(premium) ? premium.toFixed(2) : "--") + "%",
        );
        safeSetText("dConvVal", convVal.toFixed(2));
        safeSetText("dSharesInfo", `${Math.floor(shares)} ??Âºµ`);
        safeSetText("dParityPrice", parityPrice.toFixed(2));
        safeSetText(
          "dUpsideNeeded",
          (Number.isFinite(upside) ? "?Ä‰∏äÊº≤ " + upside.toFixed(2) : "--") +
            "%",
        );
        safeSetText("dCbPrice", cbPrice.toFixed(2));
        safeSetText(
          "dStockPrice",
          stockPrice > 0 ? stockPrice.toFixed(2) : "ÂæÖË???,
        );

        // Status Styling (Using Module Logic)
        const statusInfo = CbCalculatorCore.getPremiumStatus(premium);
        const card = document.getElementById("dResultCard");
        const statusEl = document.getElementById("dPremiumStatus");
        const descEl = document.getElementById("dPremiumDesc");

        // Map Module Colors to Tailwind Classes (V10 Palette)
        const colorMap = {
          indigo: {
            card: "border-indigo-500 bg-indigo-50/50",
            pill: "bg-indigo-50 text-indigo-600 border-indigo-100",
          },
          green: {
            card: "border-emerald-500 bg-emerald-50/50",
            pill: "bg-emerald-50 text-emerald-600 border-emerald-100",
          },
          amber: {
            card: "border-amber-400 bg-amber-50/50",
            pill: "bg-amber-50 text-amber-700 border-amber-100",
          },
          red: {
            card: "border-rose-400 bg-rose-50/50",
            pill: "bg-rose-50 text-rose-600 border-rose-100",
          },
        };

        const theme = colorMap[statusInfo.colorClass] || colorMap["red"];

        // Apply Card Theme (Reset base classes first to be safe, but maintaining layout classes)
        if (card)
          card.className = `premium-card p-0 rounded-2xl border-l-4 transition-colors duration-300 shadow-sm overflow-hidden stagger-entry delay-2 ${theme.card}`;

        if (statusEl) {
          statusEl.textContent =
            statusInfo.status.split(" / ")[1] || statusInfo.status;
          statusEl.className = `px-1.5 py-0.5 rounded text-[10px] font-black uppercase tracking-tighter shadow-sm border ${theme.pill}`;
        }

        if (descEl) descEl.textContent = statusInfo.desc;
      };

      // --- Chart Controls (Ported from V10) ---
      window.updateAnalysisChartRange = (range) => {
        // Update Buttons
        document
          .querySelectorAll("#dChartRangeButtons .range-btn")
          .forEach((btn) => {
            if (btn.dataset.range === range) {
              btn.classList.add(
                "active",
                "bg-white",
                "text-indigo-600",
                "shadow-sm",
              );
              btn.classList.remove("text-slate-400", "hover:bg-white");
            } else {
              btn.classList.remove(
                "active",
                "bg-white",
                "text-indigo-600",
                "shadow-sm",
              );
              btn.classList.add("text-slate-400", "hover:bg-white");
            }
          });

        // Zoom Chart via Module
        if (window.analysisChart && window.currentChartRawData) {
          CbPremiumHistoryChart.updateRange(
            window.analysisChart,
            range,
            window.currentChartRawData,
          );
        }
      };

      async function fetchAnalysisHistory(code) {
        const loader = document.getElementById("dChartLoader");
        loader.classList.remove("hidden");
        // Reset buttons to MAX default
        document
          .querySelectorAll("#dChartRangeButtons .range-btn")
          .forEach((b) => b.classList.remove("active"));
        document.querySelector('[data-range="all"]').classList.add("active");

        try {
          const res = await window.measureFetch(
            getDataPath(`history/${code}.json`),
          );
          if (!res.ok) throw "No history";
          const json = await res.json();
          window.currentChartRawData = json; // Store for filtering
          renderAnalysisChart(json);

          document.getElementById("dChartNoData").classList.add("hidden");
          document.getElementById("dPremiumChart").classList.remove("hidden");
          document.getElementById("dChartDataInfo").textContent =
            `${json.length} Á≠ÜË??ô`;
        } catch (e) {
          console.warn("History load failed:", e);
          document.getElementById("dChartNoData").classList.remove("hidden");
          document.getElementById("dPremiumChart").classList.add("hidden");
          document.getElementById("dChartDataInfo").textContent = "-- Á≠ÜË???;
        } finally {
          loader.classList.add("hidden");
        }
      }

      function renderAnalysisChart(data) {
        // Check for destroy method on existing instance (Robust Check)
        if (analysisChart && typeof analysisChart.destroy === "function")
          analysisChart.destroy();

        // Use Module - Mount Widget
        const mountPoint = document.getElementById("dPremiumChartMount");
        // Mount returns new chart instance
        analysisChart = CbPremiumHistoryChart.mount(mountPoint, data);

        // Expose raw data for potential other uses (though widget handles range internally now)
        window.currentChartRawData = data;
      }

      window.toggleDrawerParams = () => {
        document.getElementById("drawerParams").classList.toggle("hidden");
      };

      // --- Input Handling ---
      window.updateAnalysisFromInput = (type) => {
         const item = window.lastDataPool?.find((i) => i.code === window.currentAnalysisCode);
         if (!item) return;

         if (type === 'cb') {
            const val = parseFloat(document.getElementById("dCbPrice").value);
            if (!isNaN(val)) item.price = val;
         } else if (type === 'stock') {
             const val = parseFloat(document.getElementById("dStockPrice").value);
             if (!isNaN(val)) item.underlyingPrice = val;
         } else if (type === 'conv') {
             // (Handled effectively by performAnalysis reading input, but let's sync item)
         }
         
         // Re-run analysis but flag to NOT overwrite the input we just typed in?
         // performAnalysis reads inputs.
         window.performAnalysis(item);
      };

      ["dConvPriceInput", "dCbPrice", "dStockPrice"].forEach(id => {
         const el = document.getElementById(id);
         if(el) {
             el.addEventListener("input", (e) => {
                 // Determine type
                 let type = 'conv';
                 if (id === 'dCbPrice') type = 'cb';
                 if (id === 'dStockPrice') type = 'stock';
                 window.updateAnalysisFromInput(type);
             });
         }
      });

      // Initialization
      const urlParams = new URLSearchParams(window.location.search);
      const queryDate = urlParams.get("date");
      if (queryDate) fetchHistoryCB(queryDate);
      else fetchHotCB();
    </script>
  </body>
</html>
