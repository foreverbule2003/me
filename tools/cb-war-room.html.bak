      const BackgroundSync = {
          queue: [],
          processing: false,
          processed: new Set(),
          
          enqueue: function(list) {
              list.forEach(item => {
                  const p = parseFloat(item.price);
                  const isInvalid = item.isMock || p === 100 || p === 0 || isNaN(p);
                  // Check if we already processed it or have it pending
                  if (isInvalid && !this.processed.has(item.code) && !this.queue.find(q => q.code === item.code)) {
                      this.queue.push(item);
                  }
              });
              
              if (this.queue.length > 0) {
                  this.updateUI();
                  this.processNext();
              }
          },
          
          processNext: async function() {
              if (this.processing || this.queue.length === 0) {
                  this.updateUI();
                  return;
              }
              
              this.processing = true;
              const item = this.queue.shift();
              this.updateUI(item);
              
              console.log(`[Background] Processing ${item.code} (${item.name})...`);
              
              try {
                  // Check local history first to determine crawl range
                  const histPath = getDataPath(`history/${item.code}.json`);
                  let lastDate = "1970-01-01";
                  try {
                      const res = await fetch(histPath + "?t=" + Date.now());
                      if (res.ok) {
                           const json = await res.json();
                           if (json.length > 0) lastDate = json[json.length-1].date;
                      }
                  } catch(e) {}
                  
                  const todayStr = new Date().toISOString().split("T")[0];
                  // If data is stale (< Today), trigger crawler
                  if (lastDate < todayStr) {
                       await fetch(`/api/crawl?code=${item.code}&since=${lastDate}`);
                  }
                  
                  this.processed.add(item.code);
                  
                  // Optional: Refresh the specific item in lastDataPool?
                  // For now, next auto-refresh (60s) will pick it up, 
                  // OR user click will pick it up (instant).
                  
              } catch(e) {
                  console.error("[Background] Error:", e);
              }
              
              this.processing = false;
              // Delay next item to save CPU
              setTimeout(() => this.processNext(), 2000); 
          },
          
